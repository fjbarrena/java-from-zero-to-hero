<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="tecnogochi-persistence" transaction-type="RESOURCE_LOCAL">
        <class>es.iti.formacion.tecnogochi.model.Action</class>
        <class>es.iti.formacion.tecnogochi.model.GochiType</class>
        <class>es.iti.formacion.tecnogochi.model.Item</class>
        <class>es.iti.formacion.tecnogochi.model.ItemType</class>
        <class>es.iti.formacion.tecnogochi.model.Message</class>
        <class>es.iti.formacion.tecnogochi.model.MyGochis</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tecnogochi"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="n0tiene"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <!-- Database generation -->
            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>
    </persistence-unit>
</persistence>
